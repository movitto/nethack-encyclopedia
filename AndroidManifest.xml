<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.morsi.android.nethack"
      android:versionCode="1"
      android:versionName="1.0"
      android:installLocation="preferExternal">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="NethackEncyclopedia"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QuickStatsActivity"
                  android:label="@string/app_name">
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN"/>
	        </intent-filter>  
        </activity>
        <activity android:name="org.morsi.android.nethack.EncyclopediaActivity"
                  android:label="@string/app_name">
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN"/>
	        </intent-filter>  
        </activity>
        <activity android:name="org.morsi.android.nethack.CalculatorActivity"
                  android:label="@string/app_name">
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN"/>
	        </intent-filter>  
        </activity>
    </application>
</manifest>